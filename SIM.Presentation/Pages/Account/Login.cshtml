@page
@model SIM.Presentation.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen bg-gray-900 text-white">
    <div class="w-full max-w-md p-8 bg-gray-800 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-6">Sign in to your account</h2>

        <form method="post" novalidate>
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-200"></label>
                <input asp-for="Input.Email" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-500" />
                <span asp-validation-for="Input.Email" class="text-red-400 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-200"></label>
                <input asp-for="Input.Password" type="password" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2 focus:outline-none focus:ring focus:ring-indigo-500" />
                <span asp-validation-for="Input.Password" class="text-red-400 text-sm"></span>
            </div>

            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                    <input asp-for="Input.RememberMe" class="mr-2 leading-tight" />
                    <label asp-for="Input.RememberMe" class="text-sm text-gray-300">Remember me</label>
                </div>
                <a asp-page="./Register" class="text-sm text-indigo-400 hover:underline">Register</a>
            </div>

            <div>
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-500 rounded text-white font-semibold">Sign in</button>
            </div>
        </form>

        <partial name="_ValidationScriptsPartial" />
    </div>
</div>
