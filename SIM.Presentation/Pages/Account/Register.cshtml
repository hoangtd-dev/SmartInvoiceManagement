@page
@model SIM.Presentation.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-[50vh] bg-gray-900 text-white">
    <div class="w-full max-w-lg p-8 bg-gray-800 rounded-lg shadow">
        <h2 class="text-2xl font-semibold mb-6">Create an account</h2>

        <div id="registerErrorBox" class="mb-4" style="@(ViewData.ModelState.IsValid ? "display:none" : "")">
            <div class="flex items-start justify-between text-red-400 bg-red-900/10 p-3 rounded mb-2">
                <div class="flex-1">
                    <div asp-validation-summary="All" class="text-red-400"></div>
                </div>
                <button type="button" aria-label="Close" onclick="document.getElementById('registerErrorBox').style.display='none'" class="ml-4 text-red-200 hover:text-white px-2 py-1 rounded">Ã—</button>
            </div>
        </div>

        <form method="post" novalidate>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Input.FirstName" class="block text-sm text-gray-200"></label>
                    <input asp-for="Input.FirstName" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2" />
                </div>
                <div>
                    <label asp-for="Input.LastName" class="block text-sm text-gray-200"></label>
                    <input asp-for="Input.LastName" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2" />
                </div>
            </div>

            <div class="mt-4">
                <label asp-for="Input.Email" class="block text-sm text-gray-200"></label>
                <input asp-for="Input.Email" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2" />
            </div>

            <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Input.Password" class="block text-sm text-gray-200"></label>
                    <input asp-for="Input.Password" type="password" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2" />
                </div>
                <div>
                    <label asp-for="Input.ConfirmPassword" class="block text-sm text-gray-200"></label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="mt-1 block w-full rounded bg-gray-700 border border-gray-600 text-white px-3 py-2" />
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-500 rounded text-white font-semibold">Create account</button>
            </div>

            <div class="mt-4 text-center text-sm text-gray-300">
                Already have an account? <a asp-page="./Login" class="text-indigo-400 hover:underline">Sign in</a>
            </div>
        </form>

        <partial name="_ValidationScriptsPartial" />
    </div>
</div>
